= form_for @function, html: { class: "form-horizontal", role: "form" } do |f|
  -if @function.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@function.errors.count, "error")} prohibited this function from being saved:"

      %ul
        - @function.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :body, class: 'form-control'
  .form-group
    = f.label :location, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :location, class: 'form-control'
  .form-group
    = f.label :operating_system, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :operating_system, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
