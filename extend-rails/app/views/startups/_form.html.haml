= form_for @startup, html: { class: "form-horizontal", role: "form" } do |f|
  -if @startup.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@startup.errors.count, "error")} prohibited this startup from being saved:"

      %ul
        - @startup.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :order, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :order, class: 'form-control'
  .form-group
    = f.label :executable_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :executable_id, class: 'form-control'
  .form-group
    = f.label :location_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :location_id, options_from_collection_for_select(Location.all, 'id', 'name'), class: 'form-control'
  .form-group
    = f.label :operating_system_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :operating_system_id, options_from_collection_for_select(OperatingSystem.all, 'id', 'name'), class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
